{
  "root": true,
  "ignorePatterns": ["projects/**/*", "**/*.html"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
      },
      "extends": ["eslint:recommended"],
      "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "jasmine": true
      },
      "globals": {
        "spyOn": "readonly",
        "fail": "readonly"
      },
      "rules": {
        "no-unused-vars": "off",
        "no-console": "warn",
        "prefer-const": "error"
      }
    }
  ]
}